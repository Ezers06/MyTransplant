<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#e7feff">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <ImageView
            android:id="@+id/heartImageView"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:src="@drawable/heart1">

        </ImageView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:text="The Heart:"
            android:textSize="18sp"/>

        <androidx.cardview.widget.CardView
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/adamina"
                android:padding="16dp"
                android:text="The human heart doesn't rely on external signals to beat; it has its electrical conduction system. The sinoatrial (SA) node, often referred to as the natural pacemaker, generates electrical impulses that initiate each heartbeat. These electrical signals travel through the heart, coordinating the contraction (systole) and relaxation (diastole) of its chambers, allowing for the efficient pumping of blood throughout the body."
                android:textSize="13sp" />

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/adamina"
                android:padding="16dp"
                android:text="This unique feature enables the heart to maintain a regular rhythm and respond dynamically to the body's needs, such as increasing the heart rate during physical activity or stress. The intricate electrical system of the heart is a crucial aspect of its remarkable ability to sustain life."
                android:textSize="13sp" />

        </androidx.cardview.widget.CardView>

    </LinearLayout>
</ScrollView>
